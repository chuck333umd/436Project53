<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="covidservices"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"

        >
  
        <activity
            android:name="covidservices.SplashScreen"
            android:label="Splash"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="covidservices.MainListScreen"
            android:label="Covid Services Jobs List"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="covidservices.MyJobs"
            android:label="My Jobs">
        </activity>
        <activity
            android:name="covidservices.MyTasks"
            android:label="My Tasks">
        </activity>
        <activity
            android:name="covidservices.CreateJob"
            android:label="Create Job">
        </activity>
        <activity
            android:name="covidservices.UserAuth"
            android:label="Login / Register">
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>